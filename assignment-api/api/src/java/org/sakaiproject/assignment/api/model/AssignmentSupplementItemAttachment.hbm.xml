<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping default-lazy="false">
	<class name="org.sakaiproject.assignment.api.model.AssignmentModelAnswerAttachment" table="ASSIGN_MODEL_ANS_ATTACH_T">
		
		<comment>This table is for ModelAnswer attachment. </comment>
        
        <id name="id" length="99" column="ID">
			<generator class="org.sakaiproject.id.hbm.IdGenerator"/>
		</id>
       <property name="attachmentId" type="java.lang.String" not-null="true">
            <column name="ATTACHMENT_ID" />
        </property>
        
         <!--  This maps to the ASSIGNMENT_MODEL_ANSWER_ITEM_T table -->
        <many-to-one name="assignmentModelAnswerItem" column="ASN_MODEL_ANS_ID"
        	class="org.sakaiproject.assignment.api.model.AssignmentModelAnswerItem"
        	not-null="true" index="ASSIGN_MODEL_ANS_ATTACH_I" />
    </class>
    
</hibernate-mapping>