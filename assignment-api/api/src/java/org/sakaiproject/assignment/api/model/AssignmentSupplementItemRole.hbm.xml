<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.sakaiproject.assignment.api.model.AssignmentSupplementItemRole" table="ASSIGN_SUPPLEMENT_ROLE_T">
    	 
        <id name="id" length="99" column="ID">
			<generator class="org.sakaiproject.id.hbm.IdGenerator"/>
		</id>
		
       <!-- the role string -->
       <property name="roleId" type="java.lang.String" not-null="true" >
            <column name="ROLE_ID" />
        </property>
        
        <!--  This maps to the ASSIGNMENT_SUPPLEMENT_ITEM_T table -->
        <many-to-one name="assignmentSupplementItem" column="ASN_SUPP_ITEM_ID"
        	class="org.sakaiproject.assignment.api.model.AssignmentSupplementItem"
        	not-null="true" index="ASSIGN_SUPP_ROLE_I" />
        
	</class>
    
</hibernate-mapping>