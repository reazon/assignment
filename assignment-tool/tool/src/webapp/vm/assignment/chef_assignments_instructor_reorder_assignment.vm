## Assignments - reorder view
<div class="portletBody">
	#if ($allowAddAssignment || ($withGrade && $!allowGradeSubmission))
	## for user who cannot create assignment nor grade submission, no need to show "Assignment List" link at all since there is really no other toolbar choices
	<div class="navIntraTool">
		#set($prevAction=false)
		#if ($allowAddAssignment)
			#set($prevAction=true)
			<a href="#toolLink("$action" "doNew_assignment")" title="$!tlang.getString("new")">$!tlang.getString("new")</a>
		#end
		#if ($prevAction)
			 | 
		#else
			#set($prevAction=true)
		#end
		#if (!$!view.equals('lisofass1'))
			<a href="#toolLinkParam("$action" "doView" "view=lisofass1")" title="$!tlang.getString('lisofass1')">$!tlang.getString('lisofass1')</a>
		#else
			<span style="margin:.5em">$!tlang.getString("lisofass1")</span>
		#end
		#if ($withGrade && $!allowGradeSubmission)
			#if ($prevAction)
			 | 
			#else
				#set($prevAction=true)
			#end
			<a href="#toolLinkParam("$action" "doView" "view=grarep")" title="$!tlang.getString("gen.grarep")">$!tlang.getString("gen.grarep")</a>
		#end
		#if ($allowAddAssignment)
			#if ($prevAction)
			 | 
			#else
				#set($prevAction=true)
			#end
			#if (!$!view.equals('stuvie'))
				<a href="#toolLinkParam("$action" "doView" "view=stuvie")" title="$!tlang.getString("gen.stuvie")">$!tlang.getString("gen.stuvie")</a>
			#else
				$!tlang.getString("gen.stuvie")
			#end
		#end
		#if (($allowAllGroups) && ($assignmentscheck))
			#if ($prevAction)
			 |
			#else
				#set($prevAction=true)
			#end
			$tlang.getString('gen.reorder')
		#end
		#if ($allowUpdateSite)
			#if ($prevAction)
			 | 
			#end
			<a href="#toolLink("$action" "doPermissions")" title="$tlang.getString('permis')">$tlang.getString('permis')</a>
		#end
	</div>
	#end
	
	#if ($alertMessage)<div class="alertMessage" style="width:80%  !important">$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)</div><div style="display:block;clear:both"></div>#end
	
	<form name="reorderForm" id="reorderForm" action="#toolForm("AssignmentAction")" method="post" onsubmit="return true;">
		<input name="assignmentSize" id="assignmentSize" value="$assignmentsize" type="hidden" />
		<input type="hidden" name="option" id="option" value="" />
		<input type="hidden" name="view" id="view" value="" />
		<input type="hidden" name="eventSubmit_doAssignment_form" value="" />
		<div class ="breadCrumb specialLink">
			<h3>
				$tlang.getString("gen.reordertitle")
			</h3>
		</div>
		<div class="instruction">
			$tlang.getString("gen.sortinstruct")
		</div>
		<table class="listHier lines nolines" summary="$tlang.getString("sort.summary")" border="0" cellspacing="0" cellpadding="0">
			<caption class="skip" style="display: none;">$tlang.getString("sort.caption")</caption>
			<tbody>
			<tr>
				<th id="moveUp">
				</th>
				<th id="moveDown">
				</th>
				<th id="title">
					$tlang.getString("gen.asstit")
				</th>
				<th id="open">
					$tlang.getString("gen.open")
				</th>
				<th id="due">
					$tlang.getString("gen.due1")
				</th>
				<th id="position">
				    $tlang.getString("gen.position")
				</th>
			</tr>
			#set($count = 1)
			#foreach($assignment in $assignments)
			<tr class="sortable">
			    ## The 1% width attributes fixes a minor bug of having extra space after the drop down.
				<td headers="moveUp" class="moveUp">
					<a#if($count <= 1) style="display:none;"#end href="#" onclick="moveRow(this,'up')" title="$tlang.getString("sort.moveup")">
						<img src="#imageLink("sakai/arrowUp.gif")" alt="$tlang.getString("sort.moveup")" border="0">
					</a>
				</td>
				<td headers="moveDown" class="moveDown">
					<a#if($count >= $assignmentsize) style="display:none;"#end href="#" onclick="moveRow(this,'down')" title="$tlang.getString("sort.movedn")">
						<img src="#imageLink("sakai/arrowDown.gif")" alt="$tlang.getString("sort.movedn")" border="0">
					</a>
				</td>
				<td headers="title">
					$!assignment.getTitle()
				</td>
				<td headers="opentime">
					$!assignment.openTime.toStringLocalFull()
				</td>
				<td headers="duetime">
					$!assignment.dueTime.toStringLocalFull()
				</td>
				<td headers="position">
				  <select name="position_$validator.escapeUrl("$assignment.id")" onChange="moveRow(this,this.value);">
					#foreach($i in [1..$assignmentsize])
					<option value="$i"#if("$i" == "$count") selected="selected"#end>$i</option>
					#end
				  </select>
				</td>
			</tr>
			#set($count = $count + 1)
			#end
			</tbody>
		</table>
		<p class="act" style="margin:0;padding:.3em 0;">
			<input type="button" name="save" value="$tlang.getString("gen.sav")" onclick="javascript:document.reorderForm.onsubmit();document.getElementById('option').value='reorder';document.reorderForm.submit();return false;" />
			<input type="button" name="cancel" value="$tlang.getString("gen.can")" onclick="javascript:document.reorderForm.onsubmit();document.getElementById('option').value='cancelreorder';document.reorderForm.submit();return false;" />
		</p>
	</form>						

</div>
